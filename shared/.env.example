# ═══════════════════════════════════════════════════════════
# CryptoAI Master — 환경변수 설정
# ═══════════════════════════════════════════════════════════
# 사용법:
#   cp shared/.env.example shared/.env
#   # .env 파일을 열어 값을 수정하세요
# ═══════════════════════════════════════════════════════════

# ──────────── 거래소 (Upbit) ────────────
UPBIT_API_KEY=your_upbit_api_key
UPBIT_SECRET_KEY=your_upbit_secret_key
TRADING_MODE=paper                         # paper | live

# ──────────── 타겟 코인 ────────────
TARGET_COINS=BTC,ETH,XRP,SOL

# ──────────── 투자금 ────────────
TOTAL_BUDGET=1000000                       # 총 투자금 (KRW)
BUDGET_RATIO=0.7                           # 투자 비율 (70%)

# ──────────── 데이터베이스 (Supabase) ────────────
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ──────────── Redis ────────────
REDIS_URL=redis://redis:6379               # Docker 내부 = redis://redis:6379
                                           # 로컬 개발  = redis://localhost:6379

# ──────────── OpenAI (LLM 피드백) ────────────
OPENAI_API_KEY=sk-your_openai_key
OPENAI_MODEL=gpt-4o

# ──────────── Discord (알림) ────────────
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx

# ──────────── 리스크 관리 ────────────
STOP_LOSS_PCT=-3.0                         # 손절 기준 (%)
TAKE_PROFIT_PCT=5.0                        # 익절 기준 (%)
TRAILING_STOP_PCT=-2.0                     # 트레일링 스탑 (%)
MAX_HOLDING_HOURS=72                       # 최대 보유 시간
DAILY_LOSS_LIMIT_PCT=-5.0                  # 일일 최대 손실 (%)

# ──────────── 스케줄링 ────────────
DATA_COLLECTION_INTERVAL=60                # 데이터 수집 (분)
SCORING_INTERVAL=60                        # 스코어링 (분)
BUY_EXECUTION_INTERVAL=240                 # 매수 실행 (분)
RISK_CHECK_INTERVAL=5                      # 리스크 체크 (분)

# ──────────── API 서버 ────────────
API_HOST=0.0.0.0
API_PORT=8000
JWT_SECRET_KEY=your_jwt_secret_at_least_32_chars

# ──────────── 프론트엔드 ────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
